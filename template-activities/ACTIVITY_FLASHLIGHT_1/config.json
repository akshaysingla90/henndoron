    {
        "UIName": "Module Start",
        "enable": true,
        "description": "This will trigger when module starts.",
        "content": {
          "ops": [
            {
              "attributes": {
                "underline": true
              },
              "insert": "The students screens are dark - they can only see the area inside the red circle(s) on your screen. "
            },
            {
              "insert": "\n"
            },
            {
              "attributes": {
                "italic": true
              },
              "insert": "We’re at Granny Fix’s house! She needs (object). "
            },
            {
              "attributes": {
                "italic": true,
                "bold": true
              },
              "insert": "Where is"
            },
            {
              "attributes": {
                "italic": true
              },
              "insert": " (object)? "
            },
            {
              "attributes": {
                "italic": true,
                "bold": true
              },
              "insert": "I can’t see"
            },
            {
              "attributes": {
                "italic": true
              },
              "insert": " (object)! "
            },
            {
              "insert": "\n"
            },
            {
              "attributes": {
                "underline": true
              },
              "insert": "Ask students to move their mouse around i.e. shine their torch."
            },
            {
              "insert": "\n"
            },
            {
              "attributes": {
                "italic": true,
                "bold": true
              },
              "insert": "Shine! "
            },
            {
              "attributes": {
                "italic": true
              },
              "insert": "Shine your light. "
            },
            {
              "attributes": {
                "italic": true,
                "bold": true
              },
              "insert": "What can you see"
            },
            {
              "attributes": {
                "italic": true
              },
              "insert": "? "
            },
            {
              "attributes": {
                "italic": true,
                "bold": true
              },
              "insert": "Look!"
            },
            {
              "attributes": {
                "italic": true
              },
              "insert": " "
            },
            {
              "attributes": {
                "italic": true,
                "bold": true
              },
              "insert": "Is that a"
            },
            {
              "attributes": {
                "italic": true
              },
              "insert": " "
            },
            {
              "insert": "(object)? \n"
            },
            {
              "attributes": {
                "underline": true
              },
              "insert": "Click on the red circle representing the student’s mouse"
            },
            {
              "insert": "\n\n\n"
            }
          ]
        }
    },
    {
        "UIName": "On Red Circle",
        "enable": true,
        "description": "This will trigger when clicking on any student's red circle.",
        "content": {
          "ops": [
            {
              "attributes": {
                "italic": true
              },
              "insert": "Is this what Granny Fix is looking for?"
            },
            {
              "insert": "\nIf not, click the X and keep looking. If yes, click the tick.\n"
            },
            {
              "attributes": {
                "italic": true
              },
              "insert": "Hurray! Granny Fix has found her (object)!"
            },
            {
              "insert": "\nSelect a new object to find and repeat.\n\n"
            }
          ]
        }
      }
  ]
  },

